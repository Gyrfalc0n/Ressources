<?xml version="1.0" encoding="utf-8"?>
<xsl:stylesheet version="1.0" xmlns:xsl="http://www.w3.org/1999/XSL/Transform" xmlns:foo="http://www.foo.org/">
<xs:schema attributeFormDefault="unqualified" elementFormDefault="qualified" xmlns:xs="http://www.w3.org/2001/XMLSchema">
  <xs:element name="Films">
    <xs:complexType>
      <xs:sequence>
        <xs:element maxOccurs="unbounded" name="Film">
          <xs:complexType>
            <xs:sequence>
              <xs:element name="Titre" type="xs:string" />
              <xs:element name="Annee" type="xs:unsignedShort" />
              <xs:element name="Nationalite" type="xs:string" />
              <xs:element name="Genres">
                <xs:complexType>
                  <xs:sequence>
                    <xs:element maxOccurs="unbounded" name="Genre" type="xs:string" />
                  </xs:sequence>
                </xs:complexType>
              </xs:element>
              <xs:element name="Acteurs">
                <xs:complexType>
                  <xs:sequence>
                    <xs:element maxOccurs="unbounded" name="Acteur" type="xs:string" />
                  </xs:sequence>
                </xs:complexType>
              </xs:element>
              <xs:element name="Duree" type="xs:unsignedByte" />
              <xs:element name="Realisateur" type="xs:string" />
              <xs:element name="Synopsis" type="xs:string" />
              <xs:element name="Langues">
                <xs:complexType>
                  <xs:sequence>
                    <xs:element name="Langue" type="xs:string" />
                  </xs:sequence>
                </xs:complexType>
              </xs:element>
              <xs:element name="Notes">
                <xs:complexType>
                  <xs:sequence>
                    <xs:element name="Presse" type="xs:string" />
                    <xs:element name="Spectateurs" type="xs:string" />
                  </xs:sequence>
                </xs:complexType>
              </xs:element>
              <xs:element name="Seances">
                <xs:complexType>
                  <xs:sequence>
                    <xs:element maxOccurs="unbounded" name="Jour">
                      <xs:complexType>
                        <xs:sequence>
                          <xs:element name="NomDuJour" type="xs:string" />
                          <xs:element name="Horaires">
                            <xs:complexType>
                              <xs:sequence>
                                <xs:element maxOccurs="unbounded" name="Horaire" type="xs:string" />
                              </xs:sequence>
                            </xs:complexType>
                          </xs:element>
                        </xs:sequence>
                      </xs:complexType>
                    </xs:element>
                  </xs:sequence>
                </xs:complexType>
              </xs:element>
            </xs:sequence>
          </xs:complexType>
        </xs:element>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
</xs:schema>
</xsl:stylesheet>